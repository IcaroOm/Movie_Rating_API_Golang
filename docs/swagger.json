                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/movie-api_internal_models.ErrorResponse"
                        }
                    },
                    "409": {
                        "description": "Conflict",
